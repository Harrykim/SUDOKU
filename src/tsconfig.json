{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../dist",
    "baseUrl": "..",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    },
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true
  },
  "include": [
    "./**/*"
  ]
}
